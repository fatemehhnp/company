<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>
<div class="media">
<div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Salesperson</th>
      <th>Company</th>
      <th>Tax</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.date.strftime("%Y-%m-%d") %></td>
        <td><%= invoice.salesperson %></td>
        <td><%= invoice.company %></td>
        <td><%= invoice.tax %></td>
        <td><%= link_to 'Show', invoice, class: 'btn btn-mini'  %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice), class: 'btn btn-mini btn btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
<br>

